@group(0) @binding(0) var glyphs_texture: texture_2d<f32>;
@group(0) @binding(1) var glyphs_sampler: sampler;

@fragment
fn fragment(input: VertexOutput) -> @location(0) vec4<f32> {
    return textureSample(glyphs_texture, glyphs_sampler, input.tex_coords);
}
